import Foundation

enum Config {
    // MARK: - Supabase Configuration
    // Get these from: https://supabase.com/dashboard → Your Project → Settings → API
    static let supabaseURL = "https://YOUR_PROJECT_ID.supabase.co"
    static let supabaseAnonKey = "YOUR_ANON_PUBLIC_KEY_HERE"
    
    // MARK: - MLA API Configuration
    // These will eventually move to Supabase Edge Functions for security
    static let mlaAPIKey = "YOUR_MLA_API_KEY_HERE"
    static let mlaAPIBaseURL = "https://app.nlrsreports.mla.com.au/api"
    
    // MARK: - Environment
    static let environment: Environment = .development
    
    enum Environment {
        case development
        case staging
        case production
        
        var isProduction: Bool {
            return self == .production
        }
    }
    
    // MARK: - Feature Flags
    static let useSupabaseBackend = false // Set to true when backend is ready
    static let useMockData = true // Set to false when using real data
}

